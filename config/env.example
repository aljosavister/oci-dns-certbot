# Required certificate settings
CERT_DOMAINS=service.example.com
CERTBOT_EMAIL=admin@example.com

# Optional Certbot tuning
CERTBOT_MANUAL_PROPAGATION_SECONDS=90
CERTBOT_STAGING=false
CERTBOT_FORCE_RENEWAL=false
CERTBOT_DRY_RUN=false

# OCI Lexicon configuration (used to template lexicon_oci.yml)
OCI_AUTH_USER=ocid1.user.oc1..exampleuniqueID
OCI_AUTH_TENANCY=ocid1.tenancy.oc1..exampleuniqueID
OCI_AUTH_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99
OCI_AUTH_REGION=eu-frankfurt-1
OCI_AUTH_COMPARTMENT=ocid1.compartment.oc1..exampleuniqueID
OCI_AUTH_KEY_FILE=/secrets/oci_api_key.pem
LEXICON_TTL=60

# Certificate export (mounted back to the host)
CERT_EXPORT_ENABLED=true
CERT_EXPORT_PATH=/export
CERT_EXPORT_PUBLIC_NAME=public.crt
CERT_EXPORT_PRIVATE_NAME=private.key
CERT_EXPORT_UID=1000
CERT_EXPORT_GID=1000
POST_RENEW_COMMAND=podman exec app-container kill -HUP 1
